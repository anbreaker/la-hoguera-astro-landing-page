---
import AboutHogera from './AboutHogera.astro';
import EventsGallery from './EventsGallery.astro';
import Home from './Home.astro';
import LandingHeader from '../components/LandingHeader.astro';
import Layout from '../layouts/Layout.astro';
import Next from './Next.astro';
import SocialMedia from './SocialMedia.astro';
---

<Layout title="La Hoguera">
  <LandingHeader />

  <main
    class="snap-y snap-mandatory relative w-full h-screen overflow-y-auto overflow-x-hidden scroll-smooth scroll-m-0"
  >
    <div class="snap-center">
      <Home />
    </div>

    <div class="snap-center">
      <AboutHogera />
    </div>

    <div class="snap-center">
      <EventsGallery />
    </div>

    <div class="snap-center">
      <SocialMedia />
    </div>

    <div class="snap-center">
      <Next />
    </div>
  </main>
</Layout>
